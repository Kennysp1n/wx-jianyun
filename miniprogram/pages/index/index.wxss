/* miniprogram/pages/index/index.wxss */

page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.my-head {
  width: 100%;
  height: 5%;
  margin-bottom: 10rpx;
}

.my-gap {
  width: 100%;
  height: 10rpx;
  margin-bottom: 40rpx;
}

.card-list {
  width: 1900rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.my-card {
  width: 600rpx;
  height: 80%;
}

.card-detail {
  width: 100%;
  height: 100%;
}

.my-weather {
  width: 100%;
  height: 100%;
}

.currentCard {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.my-current-card {
  width: 90%;
  height: 90%;
}
