/* components/note/note.wxss */

.back-icon {
  margin: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid red;
}

.note {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.form {
  width: 85%;
  height: 100%;
}

.input-container {
  padding: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  background-color: white;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.textarea-container {
  padding: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  background-color: white;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
}

.textarea {
  width: 100%;
}

.btn {
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  background-color: white;
}

.note-detail {
  width: 95%;
  height: 80%;
  display: grid;
  grid-template-columns: repeat(auto-fill, 200rpx);
  grid-template-rows: repeat(auto-fill, 200rpx);
  gap: 20rpx;
}

.note-container {
  border-radius: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  box-shadow: 2rpx 2rpx 1rpx rgba(0, 0, 0, 0.1);
}

.note-title {
  width: 100%;
  height: 30%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);

}

.note-content {
  width: 100%;
  height: 100%;
  word-wrap: break-word;
  white-space: pre-wrap;
  overflow: scroll;
  text-overflow: ellipsis;
  font-size: 0.8rem;
}
