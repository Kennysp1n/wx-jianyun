/* components/tool/tool.wxss */

.tool {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  display: grid;
  grid-template-rows: repeat(2, 100rpx);
  grid-template-columns: repeat(3, 1fr);
  background-color: #F6F6F6;
  justify-items: center;
  align-items: center;
  align-content: center;
  row-gap: 40rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.des {
  margin: 10rpx;
}

.btn {
  width: 100rpx;
  height: 40rpx;
  border-radius: 10rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.3);
  box-shadow: 2rpx 2rpx 1rpx rgba(0, 0, 0, 0.1);
  background-color: white;

}
