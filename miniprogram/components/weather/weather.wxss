/* components/weather/weather.wxss */

.weather {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  display: flex;
  background-color: #cce5ff;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  overflow: scroll;
  color: #4da4ff;
  font-weight: bold;
}

.container {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-radius: 10rpx;
  padding: 40rpx;
}

.title {
  margin-bottom: 10rpx;
}
